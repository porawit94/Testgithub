<Window x:Class="Test_Al.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Al"
        mc:Ignorable="d"
        Title="Customers" Height="450" Width="800" Background="#FF9B9999">
    <Window.Foreground>
        <ImageBrush ImageSource="BG.jpg"/>
    </Window.Foreground>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="BG.jpg"/>
        </Grid.Background>
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="165,142,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
        <TextBox x:Name="txtAdd" HorizontalAlignment="Left" Height="23" Margin="284,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320"/>
        <Button x:Name="Show" Content="ShowData" HorizontalAlignment="Left" Margin="377,307,0,0" VerticalAlignment="Top" Width="75" Click="Show_Click"/>
        <Button x:Name="Remove" Content="Remove" HorizontalAlignment="Left" Margin="164,234,0,0" VerticalAlignment="Top" Width="75" Click="Remove_Click"/>
        <TextBox x:Name="txtRemove" HorizontalAlignment="Left" Height="23" Margin="285,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="317"/>

    </Grid>
</Window>
